<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../components/rootstyle.ejs'); %>
        <link rel="stylesheet" href="/style/sidebar.css">
        <link rel="stylesheet" href="/style/artistArtwork.css">
        <title>Document</title>
</head>

<body>
    <%- include('../components/header.ejs'); %>
    <main class="mt-10">


        <div class="container-fluid dashboard-section">

            <!-- Button to display the dashboard responsive -->
            <div class="dropdown dashboard-button">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Dashboard
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/dashboardVisitor">Profile</a></li>
                    <li><a class="dropdown-item" href="/artworkArtist">Artworks</a></li>
                    <!-- <li><a class="dropdown-item" href="#">Bookmark</a></li> -->
                </ul>
            </div>

            <!-- SECTION TO DISPLAY THE DASHBOARD SECTION -->

            <div class="row row-eq-height h-100">

                <!-- SIDEBAR MENU -->
                <div class="dashboard-menu col-lg-4 col-md-4">
                    <nav>
                        <div class="menu-items">
                            <ul class="nav-link"></ul>
                            <li>
                                <a href="" >
                                    <i class="fa-solid fa-user" ></i>
                                    <span class="link-name">Profile</span>
                                </a>
                            </li>

                            <!-- <li>
                                <a href="">
                                    <i class="fa-solid fa-palette"></i>
                                    <span class="link-name">Artwork</span>
                                </a>
                            </li> -->
                            <li>
                                <a href="/artworkArtist" style="background-color: #13130D;">
                                    <i class="fa-solid fa-bookmark" style="color: #F7F6EC;"></i>
                                    <span class="link-name" style="color: #F7F6EC;">Artworks</span>
                                </a>
                            </li>
                        </div>
                    </nav>
                </div>

                <!-- CONTENT SECTION -->
                <div class="col-lg-8 dashboard-content col-md-8">
                    <div class="status-sort">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                              Sort
                            </button>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="/artworkArtist/pending">Pending</a></li>
                              <li><a class="dropdown-item" href="/artworkArtist/approved">Approve</a></li>
                              <li><a class="dropdown-item" href="/artworkArtist/declined">Declined</a></li>
                            </ul>
                          </div>
                    </div>
                    
                    <div class="photo-gallery">
                        <% let imagesPerColumn = Math.ceil(images.length / 3); %>
                        <% for(let i = 0; i < 3; i++) { %>
                          <div class="image-column">
                            <% for(let j = 0; j < imagesPerColumn; j++) { %>
                              <% let image = images[i * imagesPerColumn + j]; %>
                              <% if(image) { %>
                                <a href="#" class="photo">
                                  <img src="/images/artwork/<%= image.image %>" alt="<%= image.artworkName %>">
                                  <div class="overlay">
                                    <div class="text"><%= image.artworkName %></div>
                                  </div>
                                </a>
                              <% } %>
                            <% } %>
                          </div>
                        <% } %>
                      </div>
                      
                    

                </div>
                
        </div>
    </main>
    <%- include('../components/rootscript.ejs'); %>
        <%- include('../components/footer.ejs'); %>

</body>

</html>